		"server": "concurrently -k -p \"[{name}]\" -n \"Server\" -c \"yellow.bold\" \"npm run start\"",
		"dev": "npm run start",
		"lint": "eslint --cache --fix",
		"format": "prettier --write ."
	},
	"author": "",
	"license": "MIT",
	"dependencies": {
		"@mint/log": "*",
		"dotenv": "^16.0.3",
		"fastify": "^4.6.0",
