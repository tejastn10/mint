		"inversify-express-utils": "^6.4.3",
		"reflect-metadata": "^0.1.13"
	},
	"devDependencies": {
		"@types/node": "^18.7.23",
		"@typescript-eslint/eslint-plugin": "^5.38.1",
		"@typescript-eslint/parser": "^5.38.1",
		"concurrently": "^7.4.0",
		"eslint": "^8.24.0",
		"nodemon": "^2.0.20",
		"prettier": "^2.7.1",
		"ts-node": "^10.9.1",
		"ts-node-dev": "^2.0.0",
